{
    "openapi": "3.1.0",
    "info": {
      "title": "Ghost Content API",
      "version": "1.0.0",
      "summary": "Ghost's RESTful Content API delivers published content to the world and can be accessed in a read-only manner by any client to render in a website, app, or other embedded media.",
      "description": {
        "$ref": "./content-api.md"
      },
      "contact": {
        "name": "Ghost",
        "url": "https://ghost.org"
      },
      "license": {
        "name": "MIT",
        "url": "https://opensource.org/licenses/MIT"
      }
    },
    "servers": [
      {
        "url": "https://{user.url}/ghost/api/content",
        "variables": {
          "user.url": {
            "default": "demo.ghost.io"
          }
        }
      }
    ],
    "security": [
      {
        "api_key": []
      }
    ],
    "tags": [
      {
        "name": "Posts",
        "description": "Posts are the primary resource in a Ghost site. Using the posts endpoint it is possible to get lists of posts filtered by various criteria.",
        "externalDocs": {
          "description": "See the posts docs",
          "url": "https://ghost.org/docs/content-api/#posts"
        }
      },
      {
        "name": "Authors",
        "description": "See the authors docs",
        "externalDocs": {
          "url": "https://ghost.org/docs/content-api/#authors",
          "description": "See the authors docs"
        }
      },
      {
        "name": "Tags",
        "description": "Tags are the primary taxonomy within a Ghost site.",
        "externalDocs": {
          "url": "https://ghost.org/docs/content-api/#tags",
          "description": "See the tags docs"
        }
      },
      {
        "name": "Pages",
        "description": "Pages are static resources that are not included in channels or collections on the Ghost front-end. The API will only return pages that were created as resources and will not contain routes created with [dynamic routing](https://ghost.org/docs/themes/routing/).",
        "externalDocs": {
          "url": "https://ghost.org/docs/content-api/#pages",
          "description": "See the pages docs"
        }
      },
      {
        "name": "Tiers",
        "description": "See the tiers docs",
        "externalDocs": {
          "url": "https://ghost.org/docs/content-api/#tiers",
          "description": "See the tiers docs"
        }
      },
      {
        "name": "Settings",
        "description": "See the settings docs",
        "externalDocs": {
          "url": "https://ghost.org/docs/content-api/#settings",
          "description": "See the settings docs"
        }
      }
    ],
   "paths": {
    
   },
