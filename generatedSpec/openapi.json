{
  "openapi": "3.1.0",
  "info": {
    "title": "Ghost Content API",
    "version": "1.0.0",
    "summary": "Ghost's RESTful Content API delivers published content to the world and can be accessed in a read-only manner by any client to render in a website, app, or other embedded media.",
    "description": {
      "$ref": "./content-api.md"
    },
    "contact": {
      "name": "Ghost",
      "url": "https://ghost.org"
    },
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "servers": [
    {
      "url": "https://{user.url}/ghost/api/content",
      "variables": {
        "user.url": {
          "default": "demo.ghost.io"
        }
      }
    }
  ],
  "security": [
    {
      "api_key": []
    }
  ],
  "tags": [
    {
      "name": "posts",
      "description": "Get lists of posts filtered by various criteria.",
      "externalDocs": {
        "description": "See the posts docs",
        "url": "https://ghost.org/docs/content-api/#posts"
      }
    },
    {
      "name": "authors",
      "description": "See the authors docs",
      "externalDocs": {
        "url": "https://ghost.org/docs/content-api/#authors",
        "description": "See the authors docs"
      }
    },
    {
      "name": "tags",
      "description": "Everything about tags",
      "externalDocs": {
        "url": "https://ghost.org/docs/content-api/#tags",
        "description": "See the tags docs"
      }
    },
    {
      "name": "pages",
      "description": "See the pages docs",
      "externalDocs": {
        "url": "https://ghost.org/docs/content-api/#pages",
        "description": "See the pages docs"
      }
    },
    {
      "name": "tiers",
      "description": "See the tiers docs",
      "externalDocs": {
        "url": "https://ghost.org/docs/content-api/#tiers",
        "description": "See the tiers docs"
      }
    },
    {
      "name": "settings",
      "description": "See the settings docs",
      "externalDocs": {
        "url": "https://ghost.org/docs/content-api/#settings",
        "description": "See the settings docs"
      }
    }
  ],
  "paths": {
    "/authors": {
      "$ref": "./paths/authors-browse.json"
    },
    "/authors/{id}": {
      "$ref": "./paths/authors-id.json"
    },
    "/authors/slug/{slug}": {
      "$ref": "./paths/authors-slug.json"
    },
    "/pages": {
      "$ref": "./paths/pages-browse.json"
    },
    "/pages/{id}": {
      "$ref": "./paths/pages-id.json"
    },
    "/pages/slug/{slug}": {
      "$ref": "./paths/pages-slug.json"
    },
    "/posts": {
      "$ref": "./paths/posts-browse.json"
    },
    "/posts/{id}": {
      "$ref": "./paths/posts-id.json"
    },
    "/posts/slug/{slug}": {
      "$ref": "./paths/posts-slug.json"
    },
    "/settings": {
      "$ref": "./paths/settings-browse.json"
    },
    "/tags": {
      "$ref": "./paths/tags-browse.json"
    },
    "/tags/{id}": {
      "$ref": "./paths/tags-id.json"
    },
    "/tags/slug/{slug}": {
      "$ref": "./paths/tags-slug.json"
    },
    "/tiers": {
      "$ref": "./paths/tiers-browse.json"
    }
  },
  "components": {
    "securitySchemes": {
      "api_key": {
        "type": "apiKey",
        "in": "query",
        "name": "key"
      }
    },
    "schemas": {}
  },
  "x-tagGroups": [
    {
      "name": "Content",
      "tags": [
        "posts",
        "authors",
        "tags",
        "pages",
        "tiers",
        "settings"
      ]
    }
  ]
}